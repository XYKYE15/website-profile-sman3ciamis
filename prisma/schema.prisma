
generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model News {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String
  createdAt   DateTime @default(now())
  updateAt    DateTime @updatedAt
}

model Achievement {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String
  createdAt   DateTime @default(now())
    updateAt    DateTime @updatedAt
}

model Teacher {
  id          String   @id @default(cuid())
  title       String   // Nama guru
  description String   // Jabatan (dipilih dari select)
  note        String?  // Keterangan jabatan (diisi manual, opsional)
  image       String
  createdAt   DateTime @default(now())
  updateAt    DateTime @updatedAt
}
